# Example values only. Never reuse placeholders in staging/production.
POSTGRES_USER=nexum
POSTGRES_PASSWORD=__SET_SECURE_PASSWORD__
POSTGRES_DB=nexum_development
POSTGRES_STAGING_DB=nexum_staging
POSTGRES_TEST_DB=nexum_test
POSTGRES_PORT=5432
DB_TIMEZONE=America/Sao_Paulo

# Optional dedicated application role (recommended for RLS enforcement).
# POSTGRES_APP_USER=nexum_app
# POSTGRES_APP_PASSWORD=__SET_SECURE_PASSWORD__

DATABASE_URL=postgresql://nexum:__SET_SECURE_PASSWORD__@localhost:5432/nexum_development
RAILS_ENV=development
APP_TIMEZONE=America/Sao_Paulo

# ActiveStorage
ACTIVE_STORAGE_SERVICE=local
GCS_PROJECT=
GCS_BUCKET=
GCS_CREDENTIALS_PATH=

# Security hardening
SESSION_TTL_HOURS=12
RAILS_ASSUME_SSL=true
APP_ALLOWED_HOSTS=localhost,127.0.0.1
CSP_CONNECT_SRC=
CSP_IMG_SRC=
